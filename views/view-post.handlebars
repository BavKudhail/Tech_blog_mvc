{{! header }}
<header>
  <div class="m-10">
    <div class="flex justify-center items-center text-center">
      <div>
        <h1 class="hero-section">Add a comment</h1>
      </div>
      <div>
        <img class="hand-point-down" src="/images/thumbs-up.png" alt="" />
      </div>
    </div>
  </div>
</header>
{{!-- comment --}}
<div class="flex justify-center">
  <div class="m-5 card-custom">
  <div class="p-10">
    <div class="flex justify-between">
      <div class="flex">
        <span>Posted by: &nbsp </span>
        <div class="text-base font-bold">
          {{post.user.username}}
        </div>
      </div>
      <div class="flex">
        <span>On: &nbsp</span>
        <span class="text-base font-bold">{{format_date post.date}}</span>
      </div>
    </div>
    <h2 class="post-title">
      <a href="/post/{{id}}">
        <div>{{post.title}}</div>
      </a>
    </h2>
    <p class="my-10">
      {{post.content}}
    </p>
  </div>
</div>
</div>



  <input id="hidden-input" type="hidden" value="{{post.id}}" />


<div class="">
  <div class="comment-form p-5">
    {{!-- COMMENT FORM --}}
    <form id="comment-form" class="p-5">
      <div>
        <textarea class="input-field rounded-30" name="" id="comment-content" cols="30" placeholder="insert comment here" rows="10"></textarea>
      </div>
      <div class="flex justify-center">
        <button type="submit" class="submit-btn btn text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Submit</button>
      </div>
    </form>
    <div>
    {{! goal - render comments to the page }}
    <div >
      {{>comments post.comments}}
    </div>
  </div>
  </div>
</div>


<script src="/js/comment.js"></script>