{{! Header }}
{{! header }}
<header>
  <div class="m-10">
    <div class="flex justify-center items-center text-center">
      <div>
        <h1 class="hero-section">Edit your post</h1>
      </div>
      <div>
        <img class="hand-point-down" src="/images/thumbs-up.png" alt="" />
      </div>
    </div>
  </div>
</header>

{{! edit your post }}
<div class="form-container justify-center items-center lg:mx-44">
  <form id="comment-form" action="">
    <input type="hidden" id="post-id" value="{{post.id}}" />
    <div class="p-10">
      <div class="flex justify-center input-box">
        <input
          class="input-field"
          id="new-post-title"
          value="{{post.title}}"
          type="text"
        />
      </div>
      <div class="flex justify-center input-box">
        <textarea
          class="input-field"
          name=""
          id="new-post-content"
          cols="30"
          rows="10"
        >{{post.content}}</textarea>
      </div>
      <div class="flex justify-between">
        <div>
          <button
            class="submit-btn text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"
          >Update Post</button>
        </div>
        <div>
          <button
            class="delete-btn text-white bg-gradient-to-br from-red-600 to-pink-500 hover:bg-gradient-to-bl rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"
          >Delete Post</button>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="/js/editpost.js"></script>